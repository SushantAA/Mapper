<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Mappe</h1>
        <div class="col-6 offset-3">
        
    <form action="/cg/<%=a._id%>?_method=PUT" method="POST" novalidate class="new-edit-validation"
        enctype="multipart/form-data" >
        
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label" >Title</label>
                    <input type="text" name="title" class="form-control" id="formGroupExampleInput" placeholder="Example input placeholder" value="<%=a.title %>" required>
                </div>
        
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Location</label>
                    <input type="text" name="location" class="form-control" id="formGroupExampleInput" placeholder="Example input placeholder" value="<%=a.location%>" required>
                </div>
        
                <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Discription</label>
                    <textarea class="form-control" name="discription" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px" required><%=a.discription%></textarea>
                </div>
                
                <!-- <div class="mb-3">
                    <label for="formGroupExampleInput" class="form-label">Add Image</label>
                    <input type="file" name="image" id="form-label" multiple>    
                </div> -->
                <div class="mb-3 custom-file">
                    <label for="formFileMultiple" class="form-label coustom-file-lable">Add Image</label>
                    <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
                </div>
        
                <div class="mb-3">
                    <div class="input-group">
                      <div class="input-group-text">$</div>
                      <input type="number" name="price" class="form-control" id="autoSizingInputGroup" placeholder="0.0" value="<%=a.price%>" required>
                    </div>
                </div>

                <div class="mb-3">
                    <% a.image.forEach( (ai,i) => { %>
                        <img src="<%=ai.url %>" class="img-thumbnail" alt="" id="image-<%=i%>" >    
                        <div class="form-check-inline">
                            <input class="form-check-input" type="checkbox" name="deleteImage[]" value="<%=ai.filename%>" id="image-<%=i%>">
                        </div>
                        <label class="form-check-label" for="image-<%=i%>">Delete ?</label>  
                    <% }) %>
                </div>
        
                <div class="mb-3">
                    <button class="btn btn-success">submit</button>
                </div>
            </form>
            <div class="mb-3">
                <a href="/cg" class="btn btn-primary" >back</a>
            </div>
        </div>
        </div>

        
    <a href="/cg/<%=a._id %>">back</a>